       var errorFn = function (jqXHR, exception) {
            var msg = '';
            if (jqXHR.status === 0) {
                msg = 'Not connect.\n Verify Network.';
            } else if (jqXHR.status == 404) {
                msg = 'Requested page not found. [404]';
            } else if (jqXHR.status == 500) {
                msg = 'Internal Server Error [500].';
            } else if (exception === 'parsererror') {
                msg = 'Requested JSON parse failed.';
            } else if (exception === 'timeout') {
                msg = 'Time out error.';
            } else if (exception === 'abort') {
                msg = 'Ajax request aborted.';
            } else {
                msg = 'Uncaught Error.\n' + jqXHR.responseText;
            }
            alert("Error: " + msg);
            $("#cover").fadeOut("slow");
        }

        var url1 = '@Url.Action("getDistrictList", "Reports")';
        function getDistrict() {
            $.ajax({
                url: url1,
                type: 'GET',
                contentType: 'application/json;charset=utf-8',
                dataType: 'json',
                success: function (data) {
                    var distList= JSON.parse(data);
                    $.each(distList, function (i) {
                        $("#ddlDistrict").append(`<option value='` + distList[i].dName + `'>` + distList[i].dName + `</option>`);
                    });
                    $("#cover").fadeOut();
                },
                error: errorFn
            });
        }

        var url2 = '@Url.Action("d_getCollegeType", "Reports")';
        function getCollegeType() {
            $.ajax({
                url: url2,
                type: 'GET',
                contentType: 'application/json;charset=utf-8',
                dataType: 'json',
                success: function (data) {
                    var TypeOfCollege= JSON.parse(data);
                    //$("#ddlCollege").empty();
                    $.each(TypeOfCollege, function (i) {
                        $("#ddlCollegeType").append(`<option value='` + TypeOfCollege[i].collegetypeid + `'>` + TypeOfCollege[i].collegetype+ `</option>`);
                    });
                    $("#cover").fadeOut();
                },
                error: errorFn
            });
        }
        
        var url3 = '@Url.Action("getCollegeListAsPerCollegeDistrict", "Reports")';
        function getCollegeList() {
            $("#cover").fadeIn();
            var dataToSend = {};
            dataToSend.collegeType = $("#ddlCollegeType").val();
            dataToSend.distName = $("#ddlDistrict").val();

            $.ajax({
                url: url3,
                type: 'GET',
                contentType: 'application/json;charset=utf-8',
                data:dataToSend,
                dataType: 'json',
                success: function (data) {
                    var ListOfColleges = JSON.parse(data);
                    $("#ddlCollege").empty();
                    $("#ddlCollege").append('<option value="0">Select All</option>');
                    $.each(ListOfColleges, function (i) {
                        $("#ddlCollege").append(`<option value='` + ListOfColleges[i].collegeid + `'>` + ListOfColleges[i].collegename + `</option>`);
                    });
                    $("#cover").fadeOut();
                },
                error: errorFn
            });
        }


        var CollegeNameSelected;
        var ITIType;
        var District;
        var url4 = '@Url.Action("getITIAdmissionStatus", "Reports")';
        var urlError = '@Url.Action("Error", "Account")';
        function getData() {
            $("#cover").fadeIn();
            var dataToSend = {};
            dataToSend.District = $("#ddlDistrict").val();
            dataToSend.CollegeType = $("#ddlCollegeType").val();
            dataToSend.CollegeId = $("#ddlCollege").val();

            District = $("#ddlDistrict :selected").text();
            if (District == 'null' || District == "Select All" || District == "0") {
                District = "All Districts";
            }
            else {
                District = District;
            }

            ITIType = $("#ddlCollegeType :selected").text();
            if (ITIType == 'null' || ITIType == "Select All" || ITIType == "0") {
                ITIType = "All ITI Type";
            }
            else {
                ITIType = ITIType;
            }

            CollegeNameSelected = $("#ddlCollege :selected").text();
            if (CollegeNameSelected == 'null' || CollegeNameSelected == "Select All" || CollegeNameSelected == "0") {
                CollegeNameSelected = "All ITI List";
            }
            else {
                CollegeNameSelected = CollegeNameSelected;
            }
            $.ajax({
                url: url4,
                type: 'POST',
                contentType: 'application/json;charset=utf-8',
                dataType: 'json',
                data: JSON.stringify(dataToSend),
                success: function (data) {
                    if (data == "1") {
                        window.location.replace(urlError);
                        return false;
                    }
                    var CompleteDataSet = JSON.parse(data);
                    var exOptn = {
                        stripHtml: true,
                        columns: ':visible',

                    };

                    var buttonsArray = [{
                        text: '<i class="fa fa-file-pdf" style="color:RED;"></i>', extend: 'pdfHtml5', footer: true,
                        title: 'ITI Admission Status Report',
                        customize: function (doc) {
                            doc.content[1].margin = [1000, 0, 100, 50],
                                // Set the font size fot the entire document
                                /* doc.defaultStyle.fontSize = 10;*/
                            // Set the fontsize for the table header
                            doc.styles.tableHeader.fontSize = 10;

                            doc.styles.tableHeader.alignment= 'left';
                            doc.styles.tableBodyEven.alignment = 'left';
                            doc.styles.tableBodyOdd.alignment = 'left';
                        },
                        messageTop: 'ITI: ' + CollegeNameSelected + ',' + 'ITI Type: ' + ITIType, messageBottom: '',
                        pageSize: 'A1',
                        orientation: 'landscape',
                        exportOptions: exOptn
                    },
                        { text: '<i class="fa fa-file-excel" style="color:GREEN;"></i>', extend: 'excelHtml5', exportOptions: exOptn, title: 'ITI Admission Status Report', messageTop: 'ITI: ' + CollegeNameSelected + ',' + 'ITI Type Type: ' + ITIType },
                        { text: '<i class="fa fa-file-csv" style="color:BLUE;"></i>', extend: 'csvHtml5', exportOptions: exOptn},
                        {
                            text: '<i class="fa fa-print" style="color:Black;"></i>', extend: 'print', exportOptions: { columns: ':visible' },
                            title: 'ITI Admission Status Report',
                            //customize: function (doc) {
                            //    doc.styles.tableHeader.alignment = 'left';
                            //    doc.styles.tableBodyEven.alignment = 'left';
                            //    doc.styles.tableBodyOdd.alignment = 'left';
                            //},

                        },];
                    var columnsArray = [
                        { data: null, title: 'Sno', render: function (data, type, row, meta) { return meta.row + meta.settings._iDisplayStart + 1; } }
                        , { data: "districtName", title: "District Name", }
                        , { data: "collegename", title: "ITI Name", }
                        , { data: "ITIType", title: "ITI Type", }
                        , { data: "totalseats", title: "Totall Seats", }
                        , { data: "total_admission", title: "Total Admissions", }
                        , { data: "vacant", title: "Vacant Seats", }

                    ];
                    $("#SeatAllotment").DataTable({
                        data: CompleteDataSet.Table,
                        dom: 'Blfrtip',
                        buttons: buttonsArray,
                        paging: true,
                        pageLength: 10,
                        lengthMenu: [
                            [10, 25, 50, 100, -1],
                            [10, 25, 50, 100, 'All'],
                        ],
                        destroy: true,
                        pageSize: 'A4',
                        "bFilter": false,
                        "searching": true,

                        //"order": [[1, "asc"]],
                        columns: columnsArray,
                        "footerCallback": function (row, data, start, end, display) {
                            this.api().columns('.sum').every(function () {
                                var column = this;

                                var sum = column
                                    .data()
                                    .reduce(function (a, b) {
                                        a = parseInt(a, 10);
                                        if (isNaN(a)) { a = 0; }
                                        b = parseInt(b, 10);
                                        if (isNaN(b)) { b = 0; }
                                        return a + b;
                                    }, 0);

                                $(column.footer()).html(sum);
                            })
                        }

                    });
                $("#cover").fadeOut("slow");
                },
                error: errorFn
        })
        }

    </script>
