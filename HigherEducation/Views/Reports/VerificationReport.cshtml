                        { data: 'panchyat_verified', title: "Panchayat Verified" },
                        { data: 'higher_edu_grad12_verified', title: "Higher Edu wt. Verified" }
                    ]
                });
                $("#cover").fadeOut("slow");
                },
                error: errorFn
        })
        }
