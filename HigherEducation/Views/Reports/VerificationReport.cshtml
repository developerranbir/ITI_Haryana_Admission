                    var msg = '';
                    if (jqXHR.status === 0) {
                        msg = 'Not connect.\n Verify Network.';
                    } else if (jqXHR.status == 404) {
                        msg = 'Requested page not found. [404]';
                    } else if (jqXHR.status == 500) {
                        msg = 'Internal Server Error [500].';
                    } else if (exception === 'parsererror') {
                        msg = 'Requested JSON parse failed.';
                    } else if (exception === 'timeout') {
                        msg = 'Time out error.';
                    } else if (exception === 'abort') {
                        msg = 'Ajax request aborted.';
                    } else {
                        msg = 'Uncaught Error.\n' + jqXHR.responseText;
                    }
                    alert("Error: " + msg);
                    $("#cover").fadeOut("slow");
                }
        })
        }
        var urlVeri = '@Url.Action("d_VerificationReport", "Reports")';
        function getData() {
            $("#cover").fadeIn();

            var dataToSend = {};

            dataToSend.collegeId = $("#ddlCollege").val();
            dataToSend.v_status = "V";
            SelectedCollege = $("#ddlCollege option:selected").text();
            $.ajax({
            url: urlVeri,
            type: 'get',
            contentType: 'application/json;charset=utf-8',
            dataType: 'json',
            data: dataToSend,
            success: function (data)
            {
                $("#tblListOfCourse").DataTable({
                    data: JSON.parse(data),
                    dom: 'Bfrtip',
                    paging: false,
                    destroy: true,
                    buttons: [{ text: '<i class="fa fa-file-pdf" style="color:RED;"></i>', extend: 'pdfHtml5', footer: true, title: "Report", messageTop: 'College: ' + SelectedCollege , messageBottom: '', pageSize: 'A2', orientation: 'landscape', exportOptions: { columns: ':visible' } }, { text: '<i class="fa fa-file-excel" style="color:GREEN;"></i>', extend: 'excelHtml5', exportOptions: { columns: ':visible' } }, { text: '<i class="fa fa-file-csv" style="color:BLUE;"></i>', extend: 'csvHtml5', exportOptions: { columns: ':visible' } }, { text: '<i class="fa fa-print" style="color:Black;"></i>', extend: 'print', exportOptions: { columns: ':visible' } }],
                    "order": [[1, "desc"]],
                    "footerCallback": function (row, data, start, end, display) {
                        this.api().columns('.sum').every(function () {
                            var column = this;

                            var sum = column
                                .data()
                                .reduce(function (a, b) {
                                    a = parseInt(a, 10);
                                    if (isNaN(a)) { a = 0; }

                                    b = parseInt(b, 10);
                                    if (isNaN(b)) { b = 0; }

                                    return a + b;
                                },0);

                            $(column.footer()).html(sum);
                        })
                    },
                    columns: [

                        { data: 'registrationID', title: 'Registration Id' },
                        { data: 'stateRank', title: ' State Rank' },
                        { data: 'round', title: 'Round' },
                        { data: 'collegename', title: "College Name" },
                        { data: 'Trade', title: "Trade" },
                        { data: 'applicant_name', title: "Candidate Name" },
                        { data: 'applicant_mother_name', title: "Mother Name" },
                        { data: 'applicant_father_name', title: "Father Name" },
                        { data: 'verificationstatus', title: "Final Verification Status", render: (d, t, r) => { return d == 'V' ? 'Verified' : d == 'R'?'Rejected': 'Not Verified'; } },
                        { data: 'verificationDate', title: "Verification Date" },
                        { data: 'verifiedby', title: "Verification College Id" },
                        { data: 'qualifyingExam', title: "Qualifying Exam" },
                        { data: 'gender', title: "Gender" },
                        { data: 'personal_verified', title: "Personal Details Verified" },
                        { data: 'education_verified', title: "Education Qual. Verified" },
                        { data: 'caste_verified', title: "Caste Verified" },
