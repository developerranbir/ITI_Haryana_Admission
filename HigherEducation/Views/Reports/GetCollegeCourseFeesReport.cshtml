            //type: 'POST',
            contentType: 'application/json;charset=utf-8',
            dataType: 'json',
            data: dataToSend,
            success: function (data)
            {
                $("#tblListOfCourse").DataTable({
                    data: JSON.parse(data),
                    dom: 't',
                    paging: false,
                    destroy:true,
                    "order": [[3, "asc"]],
                    "footerCallback": function (row, data, start, end, display) {
                        this.api().columns('.sum').every(function () {
                            var column = this;

                            var sum = column
                                .data()
                                .reduce(function (a, b) {
                                    a = parseInt(a, 10);
                                    if (isNaN(a)) { a = 0; }

                                    b = parseInt(b, 10);
                                    if (isNaN(b)) { b = 0; }

                                    return a + b;
                                },0);

                            $(column.footer()).html(sum);
                        })
