                                    <input type="button" class="btn btn-primary c-shadow-1" id="printpdf" value="Print" />
                                    <a href="~/DHE/HEMenu.aspx" class="btn btn-primary c-shadow-1" id="backlink">Back</a>
                                </div>
                            </div>
